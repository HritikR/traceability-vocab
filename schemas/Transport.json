{
  "$id": "https://w3id.org/traceability/schemas/Transport.json",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$comment": "{\"term\": \"Transport\", \"@id\": \"https://w3id.org/traceability#Transport\"}",
  "title": "Transport",
  "description": "A transport which can be a leg of a journey.",
  "type": "object",
  "required": ["shippingStopAddress", "carrier", "stopType"],
  "properties": {
    "loadLocation": {
      "$comment": "{\"term\": \"loadLocation\", \"@id\": \"https://schema.org/Place\"}",
      "title": "Load Location",
      "$ref": "https://w3id.org/traceability/schemas/Place.json"
    },
    "dischargeLocation": {
      "$comment": "{\"term\": \"dischargeLocation\", \"@id\": \"https://schema.org/Place\"}",
      "title": "Discharge Location",
      "$ref": "https://w3id.org/traceability/schemas/Place.json"
    },
    "plannedDepartureDate": {
      "$comment": "{\"term\": \"plannedDepartureDate\", \"@id\": \"https://schema.org/Date\"}",
      "title": "Planned Departure Date",
      "description": "The planned date of departure.",
      "type": "string"
    },
    "plannedArrivalDate": {
      "$comment": "{\"term\": \"plannedArrivalDate\", \"@id\": \"https://schema.org/Date\"}",
      "title": "Planned Arrival Date",
      "description": "The planned date of arrival.",
      "type": "string"
    },
    "modeOfTransport": {
      "$comment": "{\"term\": \"modeOfTransport\", \"@id\": \"https://api.swaggerhub.com/domains/dcsaorg/DCSA_DOMAIN/1.0.1#/components/schemas/modeOfTransport\"}",
      "title": "Mode of Transport",
      "description": "The mode of transport as defined by DCSA.",
      "enum": [ "Vessel", "Rail", "Truck", "Barge" ]
    },
    "carrier": {
      "$comment": "{\"term\": \"carrier\", \"@id\": \"https://schema.org/Organization\"}",
      "title": "carrier",
      "$ref": "https://w3id.org/traceability/schemas/Organization.json"
    },
    "vesselNumber": {
      "$comment": "{\"term\": \"vesselNumber\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#TransportMeans\"}",
      "title": "Vessel Number",
      "description": "The unique reference for a registered vessel.",
      "type": "string"
    },
    "voyageNumber": {
      "$comment": "{\"term\": \"voyageNumber\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#TransportMovement\"}",
      "title": "Voyage Number",
      "description": "The vessel operator-specific identifier of the Voyage.",
      "type": "string"
    }
  }
}
