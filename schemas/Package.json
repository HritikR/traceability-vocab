{
  "$id": "https://w3id.org/traceability/schemas/Package.json",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$comment": "{\"term\": \"Package\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#Package\"}",
  "title": "Package",
  "description": "Any self-contained wrapping or container within which goods can be contained, such as a box or a barrel which can be filled, partially filled or empty.",
  "type": "object",
  "required": [],
  "properties": {
    "@context": {
      "type": "array"
    },
    "type": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array"
        }
      ]
    },
    "physicalShippingMarks": {
      "$comment": "{\"term\": \"shippingMarks\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#physicalShippingMarks\"}",
      "title": "shippingMarks",
      "description": "The identifying details of a package or the actual markings that appear on the package(s). This information is provided by the shipper.",
      "type": "string"
    },
    "itemQuantity": {
      "$comment": "{\"term\": \"name\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#itemQuantity\"}",
      "title": "Item Quantity",
      "description": "Number of packages.",
      "type": "string"
    },
    "perPackageUnitQuantity": {
      "$comment": "{\"term\": \"shippingMarks\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#perPackageUnitQuantity\"}",
      "title": "perPackageUnitQuantity",
      "description": "A number of units per package in the package or trade delivery.",
      "type": "number"
    },
    "tradeLineItems": {
      "$comment": "{\"term\": \"itemsShipped\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#includedTradeLineItem\"}",
      "title": "Included Trade Line Item",
      "description": "An included trade line item.",
      "type": "array",
      "items": {
        "$ref": "https://w3id.org/traceability/schemas/PartOfOrder.json"
      }
    },
    "netWeight": {
      "$comment": "{\"term\": \"weight\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#netWeightMeasure\"}",
      "title": "A measure of the net weight (mass).",
      "type": "string"
    },
    "grossWeight": {
      "$comment": "{\"term\": \"weight\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#grossWeightMeasure\"}",
      "title": "A measure of the gross weight (mass) which includes packaging but excludes any transport equipment.",
      "type": "string"
    },
    "weightUnit": {
      "$comment": "{\"term\": \"weightUnit\", \"@id\": \"https://schema.org/unitCode\"}",
      "title": "Weight Unit",
      "description": "The unit of measure which can be expressed in imperial or metric terms",
      "type": "string"
    },
    "height": {
      "$comment": "{\"term\": \"height\", \"@id\": \"https://schema.org/height\"}",
      "title": "Height of the product",
      "type": "string"
    },
    "width": {
      "$comment": "{\"term\": \"width\", \"@id\": \"https://schema.org/width\"}",
      "title": "Width of the product",
      "type": "string"
    },
    "depth": {
      "$comment": "{\"term\": \"depth\", \"@id\": \"https://schema.org/depth\"}",
      "title": "Depth of the Product",
      "type": "string"
    },
    "grossVolume": {
      "$comment": "{\"term\": \"volume\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#grossVolumeMeasure\"}",
      "title": "Volume",
      "description": "Calculated by multiplying the width, height, and length of the packed cargo.",
      "type": "number"
    },
    "volumeUnit": {
      "$comment": "{\"term\": \"volumeUnit\", \"@id\": \"https://schema.org/unitCode\"}",
      "title": "Volume Unit",
      "description": "The unit of measure which can be expressed in either imperial or metric terms",
      "type": "string"
    }
  }
}
