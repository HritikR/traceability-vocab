{
    "$id": "https://w3id.org/traceability/schemas/EcommercePackageRegistrationCredential.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$comment": "{\"term\": \"EcommercePackageRegistrationCredential\", \"@id\": \"https://w3id.org/traceability/EcommercePackageRegistrationCredential\"}",
    "title": "EEcommercePackageRegistrationCredential",
    "description": "Ecommerce Package Registration Credential",
    "type": "object",
    "required": [
        "@context",
        "trackingID",
        "packageItems",
        "certificateName"
    ],
    "properties": {
        "@context": {
            "type": "array"
        },
        "type": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "array"
                }
            ]
        },
        "trackingID": {
            "$comment": "{\"term\": \"trackingID\", \"@id\": \"https://schema.org/trackingNumber\"}",
            "title": "Tracking Number of the Carrier",
            "type": "string",
            "default": "",
            "examples": [
                "9988 1234 8677"
            ]
        },
        "packageItems": {
            "$comment": "{\"term\": \"packageItems\", \"@id\": \"https://schema.org/ItemList\"}",
            "title": "packageItems",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "productReceiptID": {
                        "$comment": "{\"term\": \"productReceiptID\", \"@id\": \"https://w3id.org/traceability/EcommerceProductReceiptRegistrationCredential#receiptID\"}",
                        "title": "productReceiptID",
                        "description": "The receipt VC ID issued by a shipper/carrier receiving product to be packaged and shipped",
                        "type": "string"
                    },
                    "packingListID": {
                        "$comment": "{\"term\": \"packingListID\", \"@id\": \"https://schema.org/identifier\"}",
                        "title": "packingListID",
                        "description": "The packing list VC IDs issues by the seller",
                        "type": "string"
                    },
                    "orderID": {
                        "$comment": "{\"term\": \"orderID\", \"@id\": \"https://schema.org/orderNumber\"}",
                        "title": "orderNumber",
                        "description": "The seller specific Order VC ID",
                        "type": "string"
                    },
                    "productInOrder": {
                        "$comment": "{\"term\": \"productInOrder\", \"@id\": \"https://schema.org/productID\"}",
                        "title": "productInOrder",
                        "description": "Product VC IDs included in the order",
                        "type": "array"
                    }
                }
            }
        },
        "certificateName": {
            "$comment": "{\"term\": \"certificateName\", \"@id\": \"https://schema.org/name\"}",
            "title": "certificateName",
            "description": "Specific name of issued package registration certificate",
            "type": "string"
        }
    },
    "additionalProperties": false,
    "examples": []
}