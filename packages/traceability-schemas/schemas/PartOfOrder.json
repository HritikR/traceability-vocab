{
  "$id": "https://w3id.org/traceability/schemas/PartOfOrder.json",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$comment": "{\"term\": \"PartOfOrder\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#ConsignmentItem\"}",
  "title": "Part of an Order",
  "description": "Part of an Order listed in the Evidence data for a registered eCommerce Packing List based on schema.org",
  "type": "object",
  "required": [],
  "properties": {
    "@context": {
      "type": "array"
    },
    "type": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array"
        }
      ]
    },
    "manufacturer": {
      "$comment": "{\"term\": \"manufacturer\", \"@id\": \"https://schema.org/manufacturer\"}",
      "title": "Manufacturer",
      "type": "string"
    },
    "orderNumber": {
      "$comment": "{\"term\": \"orderNumber\", \"@id\": \"https://schema.org/orderNumber\"}",
      "title": "Ordernumber",
      "type": "string",
      "default": "",
      "examples": ["123ABC"]
    },
    "transportPackages": {
      "$comment": "{\"term\": \"transportPackage\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#Package\"}",
      "title": "Any self-contained wrapping or container within which goods can be contained, such as a box or a barrel which can be filled, partially filled or empty.",
      "type": "array",
      "items": {
        "$ref": "https://w3id.org/traceability/schemas/Package.json"
      }
    },
    "netWeight": {
      "$comment": "{\"term\": \"weight\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#netWeightMeasure\"}",
      "title": "A measure of the net weight (mass).",
      "type": "string"
    },
    "grossWeight": {
      "$comment": "{\"term\": \"weight\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#grossWeightMeasure\"}",
      "title": "A measure of the gross weight (mass) which includes packaging but excludes any transport equipment.",
      "type": "string"
    },
    "weightUnit": {
      "$comment": "{\"term\": \"weightUnit\", \"@id\": \"https://schema.org/unitCode\"}",
      "title": "Weight Unit",
      "description": "The unit of measure which can be expressed in imperial or metric terms",
      "type": "string"
    },
    "grossVolume": {
      "$comment": "{\"term\": \"volume\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#grossVolumeMeasure\"}",
      "title": "Volume",
      "description": "Calculated by multiplying the width, height, and length of the packed cargo.",
      "type": "number"
    },
    "volumeUnit": {
      "$comment": "{\"term\": \"volumeUnit\", \"@id\": \"https://schema.org/unitCode\"}",
      "title": "Volume Unit",
      "description": "The unit of measure which can be expressed in either imperial or metric terms",
      "type": "string"
    },
    "packageQuantity": {
      "$comment": "{\"term\": \"name\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#packageQuantity\"}",
      "title": "Package Quantity",
      "description": "A number of packages",
      "type": "string"
    },
    "itemQuantity": {
      "$comment": "{\"term\": \"name\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#tradeLineItemQuantity\"}",
      "title": "Item Quantity",
      "description": "A number of trade line items in the consignment item.",
      "type": "string"
    }
  }
}
