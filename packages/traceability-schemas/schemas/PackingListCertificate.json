{
  "$id": "https://w3id.org/traceability/schemas/PackingListCertificate.json",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$comment": "{\"term\": \"PackingListCertificate\", \"@id\": \"https://w3id.org/traceability#PackingListCertificate\"}",
  "title": "Packing List Certificate",
  "description": "Evidence data for a registered eCommerce Packing List",
  "type": "object",
  "required": [
    "@context",
    "hasDeliveryMethod",
    "deliveryAddress",
    "provider",
    "originAddress",
    "partOfOrder"
  ],
  "properties": {
    "@context": {
      "type": "array"
    },
    "type": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array"
        }
      ]
    },
    "deliveryStatus": {
      "$comment": "{\"term\": \"deliveryStatus\", \"@id\": \"https://schema.org/deliveryStatus\"}",
      "title": "DeliveryStatus",
      "type": "string",
      "default": "",
      "examples": ["EventScheduled"]
    },
    "estimatedTimeOfArrival": {
      "$comment": "{\"term\": \"estimatedTimeOfArrival\", \"@id\": \"https://schema.org/arrivalTime\"}",
      "title": "The expected arrival time",
      "type": "string"
    },
    "hasDeliveryMethod": {
      "$comment": "{\"term\": \"hasDeliveryMethod\", \"@id\": \"https://schema.org/hasDeliveryMethod\"}",
      "title": "Method of Parcel Delivery",
      "type": "string",
      "default": "",
      "examples": ["https://purl.org/goodrelations/v1#FederalExpress"]
    },
    "deliveryAddress": {
      "$comment": "{\"term\": \"deliveryAddress\", \"@id\": \"https://schema.org/deliveryAddress\"}",
      "title": "Address of the Shipper/Carrier/Importer to which the provider delivers product for final shipment",
      "$ref": "https://w3id.org/traceability/schemas/PostalAddress.json"
    },
    "provider": {
      "$comment": "{\"term\": \"provider\", \"@id\": \"https://schema.org/provider\"}",
      "title": "Provider",
      "$ref": "https://w3id.org/traceability/schemas/Organization.json"
    },
    "originAddress": {
      "$comment": "{\"term\": \"originAddress\", \"@id\": \"https://schema.org/originAddress\"}",
      "title": "Address of the Manufacturer/Packer of Parcel",
      "$ref": "https://w3id.org/traceability/schemas/PostalAddress.json"
    },
    "partOfOrder": {
      "$comment": "{\"term\": \"partOfOrder\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#ConsignmentItem\"}",
      "title": "Products in Parcel that are Part of one or more Orders",
      "type": "array",
      "items": {
        "$ref": "https://w3id.org/traceability/schemas/PartOfOrder.json"
      }
    },
    "totalWeight": {
      "$comment": "{\"term\": \"weight\", \"@id\": \"https://schema.org/weight\"}",
      "title": "Weight",
      "description": "The total weight of the cargo including packaging items being carried in the container(s). Excludes the tare weight of the container(s).",
      "type": "number"
    },
    "totalWeightUnit": {
      "$comment": "{\"term\": \"weightUnit\", \"@id\": \"https://schema.org/unitCode\"}",
      "title": "Weight Unit",
      "description": "The unit of measure which can be expressed in imperial or metric terms",
      "type": "string"
    },
    "totalVolume": {
      "$comment": "{\"term\": \"volume\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#grossVolumeMeasure\"}",
      "title": "Volume",
      "description": "Calculated by multiplying the width, height, and length of the packed cargo.",
      "type": "number"
    },
    "totalVolumeUnit": {
      "$comment": "{\"term\": \"volumeUnit\", \"@id\": \"https://schema.org/unitCode\"}",
      "title": "Volume Unit",
      "description": "The unit of measure which can be expressed in either imperial or metric terms",
      "type": "string"
    },
    "totalNumberOfPackages": {
      "$comment": "{\"term\": \"numberOfPackages\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#packageQuantity\"}",
      "title": "Number of Packages",
      "description": "Specifies the number of packages associated with this cargo item",
      "type": "number"
    }
  }
}
