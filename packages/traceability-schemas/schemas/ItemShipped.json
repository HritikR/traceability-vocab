{
  "$id": "https://w3id.org/traceability/schemas/ItemShipped.json",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$comment": "{\"term\": \"ItemShipped\", \"@id\": \"https://w3id.org/traceability#ItemShipped\"}",
  "title": "Part of an Ecommerce Order",
  "description": "Part of an Order listed in the Evidence data for a registered eCommerce Packing List based on schema.org",
  "type": "object",
  "required": [
    "type",
    "manufacturer",
    "name",
    "description",
    "weight",
    "orderQuantity"
  ],
  "properties": {
    "@context": {
      "type": "array"
    },
    "type": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array"
        }
      ]
    },
    "name": {
      "$comment": "{\"term\": \"name\", \"@id\": \"https://schema.org/name\"}",
      "title": "Name",
      "type": "string"
    },
    "description": {
      "$comment": "{\"term\": \"description\", \"@id\": \"https://schema.org/description\"}",
      "title": "Description of product",
      "type": "string"
    },
    "productID": {
      "$comment": "{\"term\": \"productID\", \"@id\": \"https://schema.org/productID\"}",
      "title": "Product ID",
      "description": "Product number of registering Legal Entity such as an ISBN",
      "type": "string"
    },
    "weight": {
      "$comment": "{\"term\": \"weight\", \"@id\": \"https://schema.org/weight\"}",
      "title": "Weight of the product",
      "type": "string"
    },
    "weightUnit": {
      "$comment": "{\"term\": \"weightUnit\", \"@id\": \"https://schema.org/unitCode\"}",
      "title": "Weight Unit",
      "description": "The unit of measure which can be expressed in imperial or metric terms",
      "type": "string"
    },
    "height": {
      "$comment": "{\"term\": \"height\", \"@id\": \"https://schema.org/height\"}",
      "title": "Height of the product",
      "type": "string"
    },
    "width": {
      "$comment": "{\"term\": \"width\", \"@id\": \"https://schema.org/width\"}",
      "title": "Width of the product",
      "type": "string"
    },
    "depth": {
      "$comment": "{\"term\": \"depth\", \"@id\": \"https://schema.org/depth\"}",
      "title": "Depth of the Product",
      "type": "string"
    },
    "volume": {
      "$comment": "{\"term\": \"volume\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#grossVolumeMeasure\"}",
      "title": "Volume",
      "description": "Calculated by multiplying the width, height, and length of the packed cargo.",
      "type": "number"
    },
    "volumeUnit": {
      "$comment": "{\"term\": \"volumeUnit\", \"@id\": \"https://schema.org/unitCode\"}",
      "title": "Volume Unit",
      "description": "The unit of measure which can be expressed in either imperial or metric terms",
      "type": "string"
    },
    "numberOfPackages": {
      "$comment": "{\"term\": \"numberOfPackages\", \"@id\": \"https://service.unece.org/trade/uncefact/vocabulary/uncefact/#packageQuantity\"}",
      "title": "Number of Packages",
      "description": "Specifies the number of packages associated with this cargo item",
      "type": "number"
    }
  }
}
